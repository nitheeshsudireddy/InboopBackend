# AWS Configuration
AWS_REGION=us-east-2
AWS_SECRET_NAME=your_secret_arn_here

# AWS Credentials (for local development only - on EC2 use IAM Role)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Database
DB_HOST=your_rds_endpoint_here
DB_NAME=inboop

# Google OAuth2 (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URL (your domain or EC2 public IP/DNS)
BACKEND_URL=http://your-domain-or-ip:8080

# CORS Origins (frontend URLs, comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# Instagram Webhook Verification Token
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=your_secure_random_token

# Optional: Set to 'validate' in production after schema is stable
DDL_AUTO=update
